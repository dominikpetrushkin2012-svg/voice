{
  "name": "voice",
  "version": "1.0.3",
  "main": "main.js",

  "scripts": {
    "start": "node server.js",
    "app": "electron .",
    "build": "electron-builder"
  },

  "build": {
    "appId": "com.voice.app",
    "productName": "Voice",
    "directories": {
      "output": "dist"
    },
    "win": {
